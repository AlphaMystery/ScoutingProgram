<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:padding="1dip">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout>
            <ImageView
                android:id="@+id/matchCreate_imageview_safespot"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@mipmap/safespot"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="Robot&apos;s safe spot for high goals"
                android:id="@+id/matchCreate_text_safespot"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matchCreate_spinner_safespot"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp"
                android:layout_below="@+id/matchCreate_text_safespot"
                android:layout_alignLeft="@+id/matchCreate_text_safespot"
                android:layout_alignStart="@+id/matchCreate_text_safespot" />
        </RelativeLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/divider_bar" />

        <TableLayout>
            <TableRow>
                <TextView android:text="Climbing:"/>
                <Spinner android:id="@+id/matchCreate_climbing"/>
            </TableRow>
        </TableLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/divider_bar" />

        <Button
            android:id="@+id/matchCreate_post_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE" />

    </TableLayout>
</ScrollView>
