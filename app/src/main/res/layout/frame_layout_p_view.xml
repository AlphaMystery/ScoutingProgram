<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:stretchColumns="*">

        <RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="TEAM NUMBER"
                android:id="@+id/pit_view_title_number"
                android:textColor="@color/carbon_black3"
                android:textSize="25dip"/>
        </RelativeLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout android:layout_column="0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Image of the robot."
                    android:textAlignment="center"
                    android:id="@+id/pit_view_robot_cap"
                    android:layout_centerHorizontal="true"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/pit_view_robot_cap"
                    android:id="@+id/pit_view_image_view_robot"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </TableRow>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/divider_bar"/>

        <TableLayout
            android:background="@color/colorPrimaryDark2">
            <TableRow>
                <TextView
                    android:text="Driver Experience:"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_driver_xp"/>
                <TextView
                    android:text="years"/>

            </TableRow>
        </TableLayout>

        <TableLayout>
            <TableRow>
                <TextView
                    android:text="Wheel type:"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_wheel_type"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:background="@color/colorPrimaryDark2">
            <TableRow>
                <TextView
                    android:text="Climbs tower:"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_tower_climb"/>
            </TableRow>
        </TableLayout>

        <TableLayout>
            <TableRow>
                <TextView
                    android:text="Climb speed:"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_climb_speed"/>
            </TableRow>

            <TableLayout
                android:background="@color/colorPrimaryDark2"
                android:stretchColumns="1,2,3">
                <TableRow>
                    <TextView
                        android:text="Robot Dimensions:"/>
                    <TextView
                        android:text="LENGTH"
                        android:id="@+id/pit_view_robot_length"/>
                    <TextView
                        android:text="WIDTH"
                        android:id="@+id/pit_view_robot_width"/>
                    <TextView
                        android:text="HEIGHT"
                        android:id="@+id/pit_view_robot_height"/>
                </TableRow>
            </TableLayout>
        </TableLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/divider_bar"/>

        <TextView
            android:background="@color/blue2"
            android:textAlignment="center"
            android:text="Defence Climb"/>

        <TableLayout>
            <TableRow
                android:background="@color/colorPrimaryDark2">
                <TextView android:text="@string/portcullis"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_portcullis"/>
            </TableRow>
        </TableLayout>

        <TableLayout>
            <TableRow>
                <TextView android:text="@string/cheval_de_frise"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_cheval_de_frise"/>
            </TableRow>
        </TableLayout>

        <TableLayout>
            <TableRow
                android:background="@color/colorPrimaryDark2">
                <TextView android:text="@string/moat"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_moat"/>
            </TableRow>
        </TableLayout>

        <TableLayout>
            <TableRow>
                <TextView android:text="@string/ramparts"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_ramparts"/>
            </TableRow>
        </TableLayout>

        <TableLayout>
            <TableRow
                android:background="@color/colorPrimaryDark2">
                <TextView android:text="@string/drawbridge"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_drawbridge"/>
            </TableRow>
        </TableLayout>
        <TableLayout>
            <TableRow
                android:layout_width="match_parent">
                <TextView android:text="@string/sally_port"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_sally_port"/>
            </TableRow>
        </TableLayout>
        <TableLayout>
            <TableRow
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark2">
                <TextView android:text="@string/rock_wall"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_rock_wall"/>
            </TableRow>
        </TableLayout>
        <TableLayout>
            <TableRow
                android:layout_width="match_parent">
                <TextView android:text="@string/rough_terrain"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_rough_terrain"/>
            </TableRow>
        </TableLayout>
        <TableLayout>
            <TableRow
                android:layout_width="match_parent"
                android:background="@color/colorPrimaryDark2">
                <TextView android:text="@string/low_bar"/>
                <TextView
                    android:text="REPLACE"
                    android:id="@+id/pit_view_low_bar"/>
            </TableRow>
        </TableLayout>

        <TextView android:text="\n\n"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT TEAM"
            android:id="@+id/pit_view_save"
            android:layout_column="0" />

    </TableLayout>
</ScrollView>