                android:id="@+id/auto_def_2_attempt_add"
                android:layout_column="2"/>
            <TextView
                android:text="Defence 2"
                android:textAlignment="center"
                android:layout_column="3"/>
            <Button
                android:layout_width="25dip"
                android:text="-"
                android:id="@+id/auto_def_2_cross_sub"
                android:layout_column="4"/>
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:id="@+id/auto_def_2_cross_score"
                android:layout_column="5"/>
            <Button
                android:layout_width="25dip"
                android:text="+"
                android:id="@+id/auto_def_2_cross_add"
                android:layout_column="6"/>
        </TableRow>

        <TableRow
            android:background="@color/colorPrimaryDark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="25dip"
                android:text="-"
                android:id="@+id/auto_def_3_attempt_sub"
                android:layout_column="0"/>
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:id="@+id/auto_def_3_attempt_score"
                android:layout_column="1"/>
            <Button
                android:layout_width="25dip"
                android:text="+"
                android:id="@+id/auto_def_3_wall_attempt_add"
                android:layout_column="2"/>
            <TextView
                android:text="Defence 3"
                android:textAlignment="center"
                android:layout_column="3"/>
            <Button
                android:layout_width="25dip"
                android:text="-"
                android:id="@+id/auto_def_3_wall_cross_sub"
                android:layout_column="4"/>
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:id="@+id/auto_def_3_cross_score"
                android:layout_column="5"/>
            <Button
                android:layout_width="25dip"
                android:text="+"
                android:id="@+id/auto_def_3_cross_add"
                android:layout_column="6"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="25dip"
                android:text="-"
                android:id="@+id/auto_def_4_attempt_sub"
                android:layout_column="0"/>
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:id="@+id/auto_def_4_attempt_score"
                android:layout_column="1"/>
            <Button
                android:layout_width="25dip"
                android:text="+"
                android:id="@+id/auto_def_4_attempt_add"
                android:layout_column="2"/>
            <TextView
                android:text="Defence 4"
                android:textAlignment="center"
                android:layout_column="3"/>
            <Button
                android:layout_width="25dip"
                android:text="-"
                android:id="@+id/auto_def_4_cross_sub"
                android:layout_column="4"/>
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:id="@+id/auto_def_4_cross_score"
                android:layout_column="5"/>
            <Button
                android:layout_width="25dip"
                android:text="+"
                android:id="@+id/auto_def_4_cross_add"
                android:layout_column="6"/>
        </TableRow>

        <TableRow
            android:background="@color/colorPrimaryDark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="25dip"
                android:text="-"
                android:id="@+id/auto_def_5_attempt_sub"
                android:layout_column="0"/>
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:id="@+id/auto_def_5_attempt_score"
                android:layout_column="1"/>
            <Button
                android:layout_width="25dip"
                android:text="+"
                android:id="@+id/auto_def_5_attempt_add"
                android:layout_column="2"/>
            <TextView
                android:text="Defence 5"
                android:textAlignment="center"
                android:layout_column="3"/>
            <Button
                android:layout_width="25dip"
                android:text="-"
                android:id="@+id/auto_def_5_cross_sub"
                android:layout_column="4"/>
            <TextView
                android:text="0"
                android:textAlignment="center"
                android:id="@+id/auto_def_5_cross_score"
                android:layout_column="5"/>
            <Button
                android:layout_width="25dip"
                android:text="+"
                android:id="@+id/auto_def_5_cross_add"
                android:layout_column="6"/>
        </TableRow>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/progress_bar_2"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stretchColumns="*">
            <TableRow>
                <TextView android:text="Started with boulder?"/>
                <ToggleButton
                    android:id="@+id/auto_toggle_boulder_start"
                    android:textOff="No"
                    android:textOn="Yes"/>
            </TableRow>
            <TableRow>
                <TextView android:text="Reached a defence?"/>
                <ToggleButton
                    android:id="@+id/auto_toggle_reached_def"
                    android:textOff="No"
                    android:textOn="Yes"/>
            </TableRow>

        </TableLayout>

    </TableLayout>

</ScrollView>