            <Button
                android:id="@+id/auto_def_4_cross_add"
                android:layout_width="25dip"
                android:layout_column="6"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark2">

            <Button
                android:id="@+id/auto_def_5_attempt_sub"
                android:layout_width="25dip"
                android:layout_column="0"
                android:text="-" />

            <TextView
                android:id="@+id/auto_def_5_attempt_score"
                android:layout_column="1"
                android:text="0"
                android:textAlignment="center" />

            <Button
                android:id="@+id/auto_def_5_attempt_add"
                android:layout_width="25dip"
                android:layout_column="2"
                android:text="+" />

            <TextView
                android:layout_column="3"
                android:text="Defence 5"
                android:textAlignment="center" />

            <Button
                android:id="@+id/auto_def_5_cross_sub"
                android:layout_width="25dip"
                android:layout_column="4"
                android:text="-" />

            <TextView
                android:id="@+id/auto_def_5_cross_score"
                android:layout_column="5"
                android:text="0"
                android:textAlignment="center" />

            <Button
                android:id="@+id/auto_def_5_cross_add"
                android:layout_width="25dip"
                android:layout_column="6"
                android:text="+" />
        </TableRow>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/divider_bar" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>

                <TextView android:text="Started with boulder?" />

                <ToggleButton
                    android:id="@+id/auto_toggle_boulder_start"
                    android:textOff="No"
                    android:textOn="Yes" />
            </TableRow>

            <TableRow android:background="@color/colorPrimaryDark2">

                <TextView android:text="Reached a defence?" />

                <ToggleButton
                    android:id="@+id/auto_toggle_reached_def"
                    android:textOff="No"
                    android:textOn="Yes" />
            </TableRow>

        </TableLayout>

    </TableLayout>

</ScrollView>