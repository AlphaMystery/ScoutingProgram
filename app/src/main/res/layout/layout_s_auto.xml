                android:textAlignment="center" />

            <Button
                android:id="@+id/matchCreate_auto_auto_low_goal_miss_add"
                android:layout_width="25dip"
                android:layout_column="2"
                android:text="+" />

            <TextView
                android:layout_column="3"
